<div class="container mt-3 p-3">
    <h1 class="text-center">Enter your expenses</h1>

    <form action="/records" method="POST">
        <div class="form-group">
            <label for="name">Name*</label>
            <input type="text" class="form-control" name="name" id="name" aria-describedby="name" placeholder="" value="{{name}}"
                   required>
        </div>
        <div class="form-group">
            <label for="category">Category*</label>
            <input type="list" list="category" class="form-control" name="category" id="category"
                   placeholder="" value="{{category}}" required>
            <datalist id="category">
                <option>Home & Utilities</option>
                <option>Transportation</option>
                <option>Leisure & Entertainment</option>
                <option>Restaurant & Dining</option>
                <option>Other</option>
            </datalist>
        </div>
        <div class="form-group">
            <label for="Date">Date*</label>
            <input type="text" class="form-control" name="date" id="date" placeholder="" value="{{date}}" required>
        </div>
        <div class="form-group">
            <label for="amount">Amount</label>
            <input type="text" class="form-control" name="amount" id="amount" placeholder="" value="{{amount}}" required>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>

</div>